<html>
<link rel="stylesheet" href="static/css/bootstrap.min.css">
<link rel="stylesheet" href="static/css/order-manager.css">
<style>
.link-div {
    padding: 5px;
    margin: 20px;
    position: center;
}

.link-div a {
    color: black;
}
</style>

<body>
    Message Content :
    <%= msg %>
        <div class="container">
            <div class="row">
                <div class="table-responsive">
                    <table class="table-striped">
                        <% for(var i=0; i<personlist.length; i++) {%>
                            <tbody>
                                <tr>
                                    <td>
                                        <%= personlist[i].consumer_name %>
                                    </td>
                                    <td>
                                        <div class=" call-btn btn btn-success">
                                            <a href="https://api.whatsapp.com/send?phone=91<%=personlist[i].consumer_mobile %>&text=<%=personlist[i].wa_message%>">Send Whatsapp</a></div>
                                    </td>
                                </tr>
                            </tbody>
                            <%  } %>
                    </table>
                </div>
            </div>
        </div>
</body>

</html>